@model IEnumerable<LibraryAutomation.Models.Book>

<h2>Kitap Listesi</h2>

<a href="@Url.Action("Create", "Book")">Yeni Kitap Ekle</a>

<table>
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>ISBN</th>
            <th>Durum</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.ISBN</td>
            <td>@(book.AvailabilityStatus ? "Mevcut" : "Ödünç Alınmış")</td>
        </tr>
    }
    </tbody>
</table>
