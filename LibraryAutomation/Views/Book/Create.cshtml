@model LibraryAutomation.Models.Book

<h2>Yeni Kitap Ekle</h2>

<form method="post">
    <label>Başlık:</label>
    <input type="text" name="Title" required />

    <label>Yazar:</label>
    <input type="text" name="Author" required />

    <label>ISBN:</label>
    <input type="text" name="ISBN" required />

    <label>Durum:</label>
    <select name="AvailabilityStatus">
        <option value="true">Mevcut</option>
        <option value="false">Ödünç Alınmış</option>
    </select>

    <button type="submit">Kaydet</button>
</form>
